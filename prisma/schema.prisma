generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id                    String                 @id @default(cuid())
  name                  String?
  email                 String?                @unique
  emailVerified         DateTime?              @map("email_verified")
  image                 String?
  password              String?
  isTwoFactorEnabled    Boolean                @default(false)
  role                  UserRole               @default(USER)
  failedLoginAttempts   Int                    @default(0) @map("failed_login_attempts")
  lockedUntil           DateTime?              @map("locked_until")
  accounts              Account[]
  TwoFactorConfirmation TwoFactorConfirmation?

  analysisJobs          AnalysisJob[]
  videoAssets           VideoAsset[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model VerificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
  @@map("verification_token")
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
  @@map("password_reset_token")
}

model TwoFactorToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
  @@map("two_factor_token")
}

model TwoFactorConfirmation {
  id     String @id @default(cuid())
  userId String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId])
  @@map("two_factor_confimation")
}




/* S3 UPLOAD PHASE */

enum UploadStatus {
  CREATED
  UPLOADING
  UPLOADED
  FAILED
  CANCELED
  DELETED
}

model VideoAsset {
  id               String       @id @default(cuid())
  userId           String       @map("user_id")

  originalFileName String       @map("original_file_name")
  contentType      String       @map("content_type")
  fileSizeBytes    BigInt?      @map("file_size_bytes")

  storageBucket    String       @map("storage_bucket")
  storageKey       String       @unique @map("storage_key")
  etag             String?      @map("etag")

  status           UploadStatus @default(CREATED)
  createdAt        DateTime     @default(now()) @map("created_at")
  updatedAt        DateTime     @updatedAt @map("updated_at")
  uploadedAt       DateTime?    @map("uploaded_at")

  failedAt         DateTime?    @map("failed_at")
  lastError        String?      @db.Text @map("last_error")


  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  analysisJobs     AnalysisJob[]


  @@index([userId, createdAt])
  @@map("video_assets")
}


model RateLimitWindow {
  key         String
  windowStart DateTime @map("window_start")
  count       Int      @default(0)
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@id([key, windowStart])
  @@index([windowStart])
  @@map("rate_limit_windows")
}



/* ANALYSIS PHASE */

enum JobStatus {
  QUEUED
  RUNNING
  COMPLETED
  FAILED
}

enum QCCheck {
  RESOLUTION
  AVG_LOUDNESS
  BITRATE
  FPS
}


model AnalysisJob {
  id            String    @id @default(cuid())
  userId        String    @map("user_id")
  videoAssetId  String    @map("video_asset_id")

  status        JobStatus @default(QUEUED)
  requested     QCCheck[] @map("requested_checks")

  resultJson    Json?     @map("result_json")
  errorMessage  String?   @db.Text @map("error_message")

  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  startedAt     DateTime? @map("started_at")
  finishedAt    DateTime? @map("finished_at")

  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  videoAsset VideoAsset @relation(fields: [videoAssetId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([status, createdAt])
  @@map("analysis_jobs")
}




/* WAITLIST PHASE */

enum WaitlistStatus {
  ACTIVE
  UNSUBSCRIBED
}

model WaitlistSubscriber {
  id             String         @id @default(cuid())
  email          String         @unique
  status         WaitlistStatus @default(ACTIVE)
  token          String         @unique

  createdAt      DateTime       @default(now())
  welcomeSentAt  DateTime?
  launchSentAt   DateTime?
  unsubscribedAt DateTime?

  source         String?
  ip             String?
  userAgent      String?

  @@map("waitlist_subscribers")
}

